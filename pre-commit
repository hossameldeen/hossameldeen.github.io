#!/bin/bash

# Credits: http://blog.ittybittyapps.com/blog/2013/09/03/git-pre-push/

echo 'Executing pre-commit...'

(cd elm && elm-make Main.elm --output=../assets/gen/javascripts/elm-main.js)
RESULT=$?
if [ $RESULT -ne 0 ]; then
    echo "failed $CMD"
    exit 1
fi

echo 'Executed pre-commit.'

exit 0